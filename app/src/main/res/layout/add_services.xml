<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addOpeningHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Opening Hours"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btAddService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btAddService"
        android:text="Add Service" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rbRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restaurant" />

        <RadioButton
            android:id="@+id/rbSupermarkets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/supermarket" />

        <RadioButton
            android:id="@+id/rbGasStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gas" />

        <RadioButton
            android:id="@+id/rbHealthcare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/health" />

        <RadioButton
            android:id="@+id/rbTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transport" />
    </RadioGroup>
</LinearLayout>