<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceDetailActivity">

    <TextView
        android:id="@+id/txtServDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jun fu restaurant"
        android:textAlignment="center"
        android:textColor="#35A1D1"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtServDetailPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phone: "
            android:textColor="#35A1D1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtServDetailPhoneEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#35A1D1"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtServDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Address: "
            android:textColor="#35A1D1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtServDetailAddressEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#35A1D1"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtServDetailOpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening times: "
            android:textColor="#35A1D1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtServDetailOpTimeEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5EA2C0"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
